<div id="search">
  <% form_tag model_path, :method => 'get' do %>
    <% content_tag :label do %>
      <%= text_field_tag :search, params[:search], :class => "text" %>
      <%= submit_tag "Search", :name => nil %>
      <%= link_to image_tag(icon_of("cross")), model_path %>
    <% end %>
  <% end %>
</div>
